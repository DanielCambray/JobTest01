{% extends 'base.html.twig' %}

{% block javascripts %}
     {{ parent() }}
     <script>
         var params = params || {};
         params.googleMapKey = '{{ google_map_key }}'
     </script>
     {{ encore_entry_script_tags('home') }}
{% endblock %}

{% form_theme form 'form/account_fields.html.twig' %}

{% block body %}

    <h1>Welcome</h1>

    <div id="dialog-welcome" class="alert alert-info">Please wait while we're detecting your country...</div>
    <div id="dialog-success" class="alert alert-info hidden"></div>
    <div id="dialog-error" class="alert alert-warning hidden"></div>

    <div id="form-subscription" class="hidden">
        {{ form_start(form) }}
        {{ form_widget(form) }}

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Create</button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}